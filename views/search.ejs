<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="/style.css" rel="stylesheet">
</head>
<body class="grey-bg">
  <%- include('nav.ejs') %>
  <div class="search-box ms-4 mt-3">
    <input class="search" name="searchName">
    <button class="searchBtn">검색</button>
  </div>
  <h3 class="ms-4 mt-3 fw-bold">검색 결과</h3>
  <div class="white-bg">
    
    <% for(let i=0; i< posts.length; i++){ %>
      <div class="list-box">
        <h4>
          <a href="/detail/<%= posts[i]['_id'] %>"><%= posts[i]['title'] %></a>
          <a href="/detail/<%= posts[i]['_id'] %>/update">✏️</a>
          <span class="delete" data-id="<%= posts[i]['_id'] %>">🗑️</span>
        </h4>
        <p><%= posts[i]['content'] %></p>
      </div>  
    <% } %>

  </div> 

  <div class="container" style="text-align: center;">

    <% for(let i=0; i< 5; i++){ %>
      <a class="page p-3 fs-2" href="/search/<%= i + 1%>?val=<%= searchName%>"><%= i + 1%></a>
      
    <% } %>
    <a class= "pages p-3 fs-2" href="/search/<%= parseInt(number)+1%>?val=<%= searchName%>">다음</a>
    
  </div>



    <script src="https://code.jquery.com/jquery-3.7.1.min.js" integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    
  
    <script>

      $('.page').removeClass('blue-bg');
      $('.page').eq('<%= number%>'-1).addClass('blue-bg');

      $('.searchBtn').click(function(){
        let 입력한거 = document.querySelector('.search').value;
        location.href = '/search/1?val='+입력한거
      })

      $('.search').on('keydown', function(e){
        if(e.key == 'Enter'){
            
          let 입력한거 = document.querySelector('.search').value;
          location.href = '/search/1?val='+입력한거
        }
      })
    </script>
  
</body>
</html>